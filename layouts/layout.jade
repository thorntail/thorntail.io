//- This is the main layout typically this is not specified in your pages,
//- but inherited by other layouts such as page.jade and post.jade.
doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Thorntail Official Website')

    link(rel="icon" href="/favicon.ico")
    link(rel="alternate" type="application/rss+xml" title="RSS Feed for thorntail.io" href="/rss.xml")

    block title
      title= title ? title + " | " + site.title : site.title

    block styles
      link(rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css")
      link(rel="stylesheet" href="/assets/css/style.css")
      link(rel="stylesheet" href="/assets/css/headers/header-default.css")
      link(rel="stylesheet" href="/assets/css/footers/footer-v1.css")
      link(rel="stylesheet" href="/assets/plugins/animate.css")
      link(rel="stylesheet" href="/assets/plugins/line-icons/line-icons.css")
      link(rel="stylesheet" href="/assets/plugins/parallax-slider/css/parallax-slider.css")
      link(rel="stylesheet" href="/assets/plugins/owl-carousel/owl-carousel/owl.carousel.css")
      link(rel="stylesheet" href="/assets/css/theme-colors/default.css" id="style_color")
      link(rel="stylesheet" href="/assets/css/theme-skins/dark.css")
      link(rel="stylesheet" href="/assets/css/custom.css")
      link(rel='stylesheet' media='screen' href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,800')
      link(rel='stylesheet' media='screen' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
      link(rel='stylesheet' media='screen' href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.4.0/styles/default.min.css')
      link(rel="stylesheet" href="/css/site.css")

  body
    block body
    block navbar
      .header
        .container
          a(class='logo', href='/')
            img(src='/images/thorntail_icon_rgb_64px.png').icon
            span(style='font-size:20px;vertical-align:middle;color:#555;margin-left:10px') Thorntail
          .topbar
            ul.loginbar.pull-right
              li.hoverSelector
                a(href="http://jboss.org") JBoss.org
              li.topbar-devider
              li.hoverSelector
                a(href="http://redhat.com") Red Hat
              li.hoverSelector
                img(style='margin-left:10px', src='https://img.shields.io/maven-central/v/io.thorntail/bom.svg?maxAge=86400')
          button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='#navbar', aria-controls="navbar", aria-expanded="false")
            span(class='sr-only') Toggle Navigation
            span(class='fa fa-bars')

        div(id="navbar", aria-expanded="false" class="navbar-collapse mega-menu navbar-responsive-collapse collapse")
          .container
              ul.nav.navbar-nav
                li
                  a(href='/generator',class='dropdown-toggle') Generator
                li
                  a(href='/archive') Blog
                li
                  a(href='/documentation') Documentation
                li
                  a(href='/community') Community
                li.dropdown
                  a(href='#', class="dropdown-toggle", data-toggle="dropdown") Resources
                  ul.dropdown-menu
                    li
                      a(href="/downloads") Downloads
                    li
                      a(href="/resources") Presentations

    .wrapper
      block main


    .footer-v1
      .footer
        .container
          .row
            .col-sm-6.md-margin-bottom-40
              p(class='text-center')
                Copyright 2016 - 2018 <a href="http://redhat.com">Red Hat, Inc.</a> | Thorntail is Open Source Software

    block scripts
      if devMode
        script(src="http://localhost:35729/livereload.js")

      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-83419890-2', 'auto');
        ga('send', 'pageview');

        ga('create', 'UA-6435340-8', 'auto');
        ga('send', 'pageview');

      script(type="text/javascript" src="/assets/js/highlight.pack.js")

      script(type="text/javascript" src="/assets/plugins/jquery/jquery.min.js")
      script(type="text/javascript" src="/assets/plugins/jquery/jquery-migrate.min.js")

      script(type="text/javascript" src="/assets/plugins/bootstrap/js/bootstrap.min.js")

      script(type="text/javascript" src="/assets/plugins/back-to-top.js")
      script(type="text/javascript" src="/assets/plugins/smoothScroll.js")
      script(type="text/javascript" src="/assets/plugins/parallax-slider/js/modernizr.js")
      script(type="text/javascript" src="/assets/plugins/parallax-slider/js/jquery.cslider.js")
      script(type="text/javascript" src="/assets/plugins/owl-carousel/owl-carousel/owl.carousel.js")

      script(type="text/javascript" src="/assets/js/custom.js")

      script(type="text/javascript" src="/assets/js/app.js")
      script(type="text/javascript" src="/assets/js/plugins/owl-carousel.js")
      script(type="text/javascript" src="/assets/js/plugins/style-switcher.js")
      script(type="text/javascript" src="/assets/js/plugins/parallax-slider.js")

      script.
        (function() {

          jQuery(document).ready(function() {
            App.init();
            OwlCarousel.initOwlCarousel();
            StyleSwitcher.initStyleSwitcher();
            ParallaxSlider.initParallaxSlider();

            hljs.initHighlightingOnLoad();
          });

        })();

    block custom-scripts
